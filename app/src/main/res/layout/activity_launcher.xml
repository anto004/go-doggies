<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_app_green"
        android:gravity="top|center"
        android:orientation="vertical">

        <include layout="@layout/go_doggie_toolbar" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="214dp"
            android:layout_height="214dp"
            android:src="@drawable/go_doggie_white_round_white" />

        <Button
            android:id="@+id/sign_in_launcher_button"
            style="@style/GoDoggieButton"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="150dp"
            android:autoSizeTextType="none"
            android:stateListAnimator="@animator/button_anim"
            android:text="@string/sign_in_sign_up"
            android:textAllCaps="false"
            android:textColor="@android:color/white" />
    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>